    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File With Env",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Ingest papers",
            "type": "python",
            "request": "launch",
            "program": "knowledge_graph/ingest_papers.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Flask app",
            "type": "python",
            "request": "launch",
            "program": "app.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Setup Neo4j",
            "type": "python",
            "request": "launch",
            "program": "kg/setup_neo4j.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Query Neo4j",
            "type": "python",
            "request": "launch",
            "program": "kg/query_neo4j.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Download",
            "type": "python",
            "request": "launch",
            "program": "download.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/arxiv-bot"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Extract PDF Text",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/extract.py",
            "args": [
                "${workspaceFolder}/papers/Steps toward Artificial Intelligence.pdf"
            ]
        },
        {
            "name": "Summarize Text",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/summarize.py",
            "args": [
                "${workspaceFolder}/papers/Steps toward Artificial Intelligence.pdf"
            ],
        }
    ]
}